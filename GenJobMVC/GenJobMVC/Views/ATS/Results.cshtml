                                    </div>
                                </div>
                                <div>
                                    <div class="flex justify-between text-sm font-medium text-gray-700 mb-1">
                                        <span>Experience</span>
                                        <span>@Model.Scores.ExperienceMatch.ToString("F1")%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-cyan-600 h-2 rounded-full" style="width: @Model.Scores.ExperienceMatch%"></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="flex justify-between text-sm font-medium text-gray-700 mb-1">
                                        <span>Education</span>
                                        <span>@Model.Scores.EducationMatch.ToString("F1")%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
