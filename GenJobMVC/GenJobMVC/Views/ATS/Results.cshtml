                                            </svg>
                                        </div>
                                        <div class="ml-3">
                                            <h3 class="text-sm font-medium text-yellow-800">Consider adding these keywords to improve your ATS score:</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var keyword in Model.MissingKeywords)
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">@keyword</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Company Match -->
                    @if (!string.IsNullOrEmpty(Model.CompanyMatch))
                    {
                        <div class="bg-white border border-gray-200 rounded-lg shadow-sm mb-8">
                            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 rounded-t-lg">
                                <h5 class="text-lg font-semibold text-gray-900 flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
