@model CompanyViewModel

@{
    ViewData["Title"] = "Company Form";
}
@Html.Partial("_Sidebar")

<div class="min-h-screen bg-gray-100 dark:bg-gray-900 flex items-center justify-center p-8">
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-8 w-full max-w-2xl">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-6">Company Form</h2>

        <form method="post" class="space-y-6">

            <!-- Company Dropdown -->
            <div>
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Company</label>
                <div class="relative">
                    <input type="text" id="companySearch" placeholder="Search company..."
                           class="w-full px-4 py-2 border rounded-xl 
                                  bg-gray-50 dark:bg-gray-700 
                                  text-gray-900 dark:text-gray-200 
                                  border-gray-300 dark:border-gray-600
                                  focus:ring-2 focus:ring-indigo-500 focus:outline-none mb-2" />
                    <select id="companyDropdown" name="Company"
                            class="w-full px-4 py-2 border rounded-xl 
                                   bg-gray-50 dark:bg-gray-700 
                                   text-gray-900 dark:text-gray-200 
                                   border-gray-300 dark:border-gray-600
                                   focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        @foreach (var c in Model.Company)
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Role Dropdown -->
            <div>
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Role</label>
                <div class="relative">
                    <input type="text" id="roleSearch" placeholder="Search role..."
                           class="w-full px-4 py-2 border rounded-xl 
                                  bg-gray-50 dark:bg-gray-700 
                                  text-gray-900 dark:text-gray-200 
                                  border-gray-300 dark:border-gray-600
                                  focus:ring-2 focus:ring-indigo-500 focus:outline-none mb-2" />
                    <select id="roleDropdown" name="Roles"
                            class="w-full px-4 py-2 border rounded-xl 
                                   bg-gray-50 dark:bg-gray-700 
                                   text-gray-900 dark:text-gray-200 
                                   border-gray-300 dark:border-gray-600
                                   focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        @foreach (var r in Model.Roles)
                        {
                            <option value="@r">@r</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Location Dropdown -->
            <div>
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Location</label>
                <div class="relative">
                    <input type="text" id="locationSearch" placeholder="Search location..."
                           class="w-full px-4 py-2 border rounded-xl 
                                  bg-gray-50 dark:bg-gray-700 
                                  text-gray-900 dark:text-gray-200 
                                  border-gray-300 dark:border-gray-600
                                  focus:ring-2 focus:ring-indigo-500 focus:outline-none mb-2" />
                    <select id="locationDropdown" name="Location"
                            class="w-full px-4 py-2 border rounded-xl 
                                   bg-gray-50 dark:bg-gray-700 
                                   text-gray-900 dark:text-gray-200 
                                   border-gray-300 dark:border-gray-600
                                   focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        @foreach (var l in Model.Location)
                        {
                            <option value="@l">@l</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Status Dropdown -->
            <div>
                <label class="block text-gray-700 dark:text-gray-300 font-medium mb-2">Status</label>
                <div class="relative">
                    <input type="text" id="statusSearch" placeholder="Search status..."
                           class="w-full px-4 py-2 border rounded-xl 
                                  bg-gray-50 dark:bg-gray-700 
                                  text-gray-900 dark:text-gray-200 
                                  border-gray-300 dark:border-gray-600
                                  focus:ring-2 focus:ring-indigo-500 focus:outline-none mb-2" />
                    <select id="statusDropdown" name="Status"
                            class="w-full px-4 py-2 border rounded-xl 
                                   bg-gray-50 dark:bg-gray-700 
                                   text-gray-900 dark:text-gray-200 
                                   border-gray-300 dark:border-gray-600
                                   focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        @foreach (var s in Model.Status)
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-right">
                <button type="submit"
                        class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-xl shadow hover:bg-indigo-700 transition
                               dark:bg-indigo-500 dark:hover:bg-indigo-600">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function setupSearch(inputId, dropdownId) {
            const input = document.getElementById(inputId);
            const dropdown = document.getElementById(dropdownId);

            input.addEventListener("keyup", function () {
                let filter = input.value.toLowerCase();
                for (let i = 0; i < dropdown.options.length; i++) {
                    let txt = dropdown.options[i].text.toLowerCase();
                    if(txt.includes(filter) || filter.includes(txt)){
                        console.log(txt)
                    }
                }
            });
        }

        setupSearch("companySearch", "companyDropdown");
        setupSearch("roleSearch", "roleDropdown");
        setupSearch("locationSearch", "locationDropdown");
        setupSearch("statusSearch", "statusDropdown");
    </script>
}
